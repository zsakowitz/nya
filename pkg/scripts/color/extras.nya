use "color";
use "color/oklab";

fn oklch(l: num, c: num, h: num) -> Color3 {
  let h = h * (2.0 * pi / 360.0);
  oklab(l, c * cos(h), c * sin(h))
}

fn oklch(l: num, c: num, h: num, alpha: num) -> Color {
  rgba(oklch(l, c, h), alpha)
}

