{
  "scripts": {
    "dev": "bun run build:tw && bun run manifest && bun run esb",
    "esb": "mkdir -p dist; cp index.dev.html dist/index.html && cp -R icon dist/icon && cp icon/favicon.ico dist/favicon.ico && esbuild --watch=forever --loader:.woff=file --loader:.ttf=file --loader:.glsl=text --loader:.woff2=file --loader:.svg=file --loader:.eot=file --servedir=dist --format=esm --bundle --outdir=dist --splitting src/index.ts",
    "tw": "tailwindcss -i ./index.postcss -o ./index.css --watch",
    "build": "bun run build:tw && bun run build:esb && cp index.html dist/index.html && cp -R icon dist/icon && cp icon/favicon.ico dist/favicon.ico",
    "build:esb": "esbuild --bundle --minify --format=esm --outdir=dist --splitting --loader:.woff=file --loader:.ttf=file --loader:.glsl=text --loader:.woff2=file --loader:.svg=file --loader:.eot=file src/index.ts --metafile=meta.json --legal-comments=linked",
    "build:tw": "tailwindcss -i ./index.postcss -o ./index.css --minify",
    "lint": "tsc && madge src/index.ts --ts-config tsconfig.json -c",
    "graph:cycles": "madge --image graph.svg --ts-config tsconfig.json --circular src/index.ts",
    "graph:pkg": "madge --image graph.svg --ts-config tsconfig.json --exclude 'src|util[-/]' pkg/list/{*.ts,**/*.ts,**/**/*.ts,**/**/**/*.ts}",
    "manifest": "bun pkg/manifest/generate.ts > pkg/manifest/data.json"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@stdlib/math": "^0.3.3",
    "@zsnout/ithkuil": "^0.1.119",
    "mathjs": "^14.3.1",
    "regl": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.9",
    "@types/node": "^22.14.1",
    "esbuild": "^0.24.0",
    "esbuild-visualizer": "^0.7.0",
    "madge": "^8.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-glsl": "^0.2.1",
    "prettier-plugin-jsdoc": "^1.3.0",
    "tailwindcss": "^3.4.15",
    "ts-unused-exports": "^11.0.1",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-glsl",
      "prettier-plugin-jsdoc"
    ],
    "experimentalTernaries": true,
    "proseWrap": "always",
    "quoteProps": "consistent"
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      }
    }
  }
}
