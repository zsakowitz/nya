{
  "scripts": {
    "dev": "bun run build:tw && bun run manifest && bun run esb",
    "esb": "mkdir -p dist; cp src/page/index.dev.html dist/index.html && cp -R src/icon dist/icon && cp src/icon/favicon.ico dist/favicon.ico && esbuild --watch=forever --loader:.woff=file --loader:.ttf=file --loader:.nya=text --loader:.glsl=text --loader:.woff2=file --loader:.svg=file --loader:.eot=file --servedir=dist --format=esm --bundle --outdir=dist --splitting src/index.ts",
    "tw": "tailwindcss -i ./src/page/index.postcss -o ./src/page/index.dist.css --watch",
    "build": "bun run build:tw && bun run build:esb && cp src/page/index.prod.html dist/index.html && cp -R src/icon dist/icon && cp src/icon/favicon.ico dist/favicon.ico",
    "build:esb": "esbuild --bundle --minify --format=esm --outdir=dist --splitting --loader:.woff=file --loader:.ttf=file --loader:.nya=text --loader:.glsl=text --loader:.woff2=file --loader:.svg=file --loader:.eot=file src/index.ts --metafile=meta.json --legal-comments=linked",
    "build:tw": "tailwindcss -i ./src/page/index.postcss -o ./src/page/index.dist.css --minify",
    "lint": "tsc && madge src/index.ts --ts-config tsconfig.json -c",
    "lint:cycles": "madge --ts-config tsconfig.json --circular src/index.ts",
    "lint:cycles-lang": "madge --ts-config tsconfig.json --circular lang/src/preview.ts",
    "graph:pkg": "madge --image graph.svg --ts-config tsconfig.json --exclude 'src|util[-/]' pkg/list/{*.ts,**/*.ts,**/**/*.ts,**/**/**/*.ts}",
    "manifest": "bun pkg/manifest/generate.ts > pkg/manifest/data.json",
    "build:prettier": "esbuild lang/src/prettier/plugin.ts --bundle --minify --platform=node --format=cjs --external:prettier --outfile=lang/src/prettier/plugin.js"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@zsnout/ithkuil": "^0.1.121",
    "regl": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/fuzzy-search": "^2.1.5",
    "@types/node": "^22.15.32",
    "esbuild": "^0.24.2",
    "esbuild-visualizer": "^0.7.0",
    "madge": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-glsl": "^0.2.1",
    "prettier-plugin-jsdoc": "^1.3.2",
    "tailwindcss": "^3.4.17",
    "ts-unused-exports": "^11.0.1",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-glsl",
      "prettier-plugin-jsdoc",
      "./lang/src/prettier/plugin.js"
    ],
    "experimentalTernaries": true,
    "proseWrap": "always",
    "overrides": [
      {
        "files": "lang/src/std/**/*",
        "options": {
          "printWidth": 160
        }
      }
    ]
  },
  "madge": {
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      }
    }
  }
}
